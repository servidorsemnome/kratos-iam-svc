{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "nicknames": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minItems": 1,
            "minLength": 3,
            "ory.sh/kratos": {
              "credentials": {
                "password": {
                  "identifier": true
                }
              }
            }
          }
        },
        "primaryNickname": {
          "type": "string",
          "title": "Nickname Principal",
          "anyOf": [
            {
              "contains": {
                "$ref": "#/properties/traits/properties/nicknames"
              }
            }
          ]
        }
      },
      "required": [
        "email",
        "nicknames",
        "primaryNickname"
      ],
      "additionalProperties": false
    }
  }
}
